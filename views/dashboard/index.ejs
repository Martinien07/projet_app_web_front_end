<!-- Need: Apexcharts -->
<script src="../../assets/extensions/apexcharts/apexcharts.min.js"></script>

<script>
/* === Préparer les données venant du serveur (sécurisé) ===
   Assure-toi que les variables EJS existent côté controller.
*/
const totalChantiers = "<%= JSON.stringify(totalChantiers ?? 0) %>";
const totalIncidents = "<%= JSON.stringify(totalIncidents ?? 0) %>";
const incidentsCritique = "<%= JSON.stringify(incidentsCritique ?? 0) %>";

/* Si tu as incidentsModere / incidentsMineur, on peut les utiliser aussi.
   On met des valeurs par défaut à 0 si elles sont absentes.
*/
const incidentsModere = "<%= JSON.stringify(typeof incidentsModere !== 'undefined' ? incidentsModere : 0) %>";
const incidentsMineur = "<%= JSON.stringify(typeof incidentsMineur !== 'undefined' ? incidentsMineur : 0) %>";

/* === Chart principal : camembert répartition par gravité === */
document.addEventListener("DOMContentLoaded", function () {
    const options = {
        series: [incidentsCritique, incidentsModere, incidentsMineur],
        chart: {
            type: 'donut',
            height: 320
        },
        labels: ['Critique', 'Modéré', 'Mineur'],
        legend: {
            position: 'bottom'
        },
        responsive: [{
            breakpoint: 768,
            options: {
                chart: { height: 260 },
                legend: { position: 'bottom' }
            }
        }]
    };

    const chart = new ApexCharts(document.querySelector("#chart-profile-visit"), options);
    chart.render();

    // Petits charts région (placeholder small radial bars)
    const optSmall = (selector) => ({
        chart: { height: 80, type: 'radialBar' },
        series: [Math.floor(Math.random()*100)+20], // valeurs placeholder — tu peux remplacer par vraies données
        plotOptions: { radialBar: { hollow: { size: '60%' } } },
        stroke: { lineCap: 'round' }
    });

    new ApexCharts(document.querySelector("#chart-europe"), optSmall("#chart-europe")).render();
    new ApexCharts(document.querySelector("#chart-america"), optSmall("#chart-america")).render();
    new ApexCharts(document.querySelector("#chart-indonesia"), optSmall("#chart-indonesia")).render();

    // Visitors profile mini chart (placeholder)
    const visitorsOptions = {
        series: [44, 55, 41],
        chart: { type: 'bar', height: 160 },
        plotOptions: { bar: { horizontal: false, columnWidth: '45%' } },
        xaxis: { categories: ['A', 'B', 'C'] }
    };
    new ApexCharts(document.querySelector("#chart-visitors-profile"), visitorsOptions).render();
});
</script>

<script src="../../assets/static/js/pages/dashboard.js"></script>

