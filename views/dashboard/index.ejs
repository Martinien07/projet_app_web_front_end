        <%- include("../partials/header") %>   

            
<div class="page-heading">
    <h3>Statistiques </h3>
</div> 
<div class="page-content"> 
    <section class="row">
        <div class="col-12 col-lg-9">
            <div class="row">
                <!-- Carte 1 : Total chantiers -->
                <div class="col-6 col-lg-3 col-md-6">
                    <div class="card">
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start ">
                                    <div class="stats-icon purple mb-2">
                                    <i class="ri-building-2-fill"></i>


                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">Chantiers</h6>
                                    <h6 class="font-extrabold mb-0"><%= totalChantiers ?? 0 %></h6>
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>

                <!-- Carte 2 : Total incidents -->
                <div class="col-6 col-lg-3 col-md-6">
                    <div class="card"> 
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start ">
                                    <div class="stats-icon blue mb-2">
                                        <i class="iconly-boldProfile"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">Incidents</h6>
                                    <h6 class="font-extrabold mb-0"><%= totalIncidents ?? 0 %></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Carte 3 : Incidents critiques -->
                <div class="col-6 col-lg-3 col-md-6">
                    <div class="card">
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start ">
                                    <div class="stats-icon red mb-2">
                                        <i class="iconly-boldAdd-User"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">Incidents critiques</h6>
                                    <h6 class="font-extrabold mb-0"><%= incidentsCritique ?? 0 %></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Carte 4 : Inspections -->
                <div class="col-6 col-lg-3 col-md-6">
                    <div class="card">
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start ">
                                    <div class="stats-icon red mb-2">
                                        <i class="iconly-boldBookmark"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">Inspections</h6>
                                    <h6 class="font-extrabold mb-0"><%= totalInspections ?? 0 %></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Graphique principal : Répartition incidents par gravité -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Répartition des incidents (par mois de l'année en cours)</h4>
                        </div>
                        <div class="card-body">
                            <div id="chart-profile-visit"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Petits charts + tableau derniers incidents -->
            <div class="row">
                <div class="col-12 col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            <h4>Chantiers par région</h4>
                        </div>
                        <div class="card-body">
                            <!-- Europe -->
                            <div class="row mb-3">
                                <div class="col-7">
                                    <div class="d-flex align-items-center">
                                        <svg class="bi text-primary" width="32" height="32" fill="blue"
                                            style="width:10px">
                                            <use xlink:href="assets/static/images/bootstrap-icons.svg#circle-fill" />
                                        </svg>
                                        <h5 class="mb-0 ms-3">Outaouais</h5>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <h5 class="mb-0 text-end">8</h5>
                                </div>
                                <div class="col-12">
                                    <div id="chart-europe"></div>
                                </div>
                            </div>

                            <!-- America -->
                            <div class="row mb-3">
                                <div class="col-7">
                                    <div class="d-flex align-items-center">
                                        <svg class="bi text-success" width="32" height="32" fill="blue"
                                            style="width:10px">
                                            <use xlink:href="assets/static/images/bootstrap-icons.svg#circle-fill" />
                                        </svg>
                                        <h5 class="mb-0 ms-3">Québec</h5>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <h5 class="mb-0 text-end">3</h5>
                                </div>
                                <div class="col-12">
                                    <div id="chart-america"></div>
                                </div>
                            </div>

                            <!-- Indonesia -->
                            <div class="row">
                                <div class="col-7">
                                    <div class="d-flex align-items-center">
                                        <svg class="bi text-danger" width="32" height="32" fill="blue"
                                            style="width:10px">
                                            <use xlink:href="assets/static/images/bootstrap-icons.svg#circle-fill" />
                                        </svg>
                                        <h5 class="mb-0 ms-3">Laval</h5>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <h5 class="mb-0 text-end">1</h5>
                                </div>
                                <div class="col-12">
                                    <div id="chart-indonesia"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Derniers incidents -->
                <div class="col-12 col-xl-8">
                    <div class="card">
                        <div class="card-header">
                            <h4>Derniers incidents</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-lg">
                                    <thead>
                                        <tr>
                                            <th>Reporter</th>
                                            <th>Incident</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (lastIncidents && lastIncidents.length) { %>
                                            <% lastIncidents.forEach(inc => { %>
                                                <tr>
                                                    <td class="col-3">
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar avatar-md">
                                                                <!-- tu peux remplacer par inc.Reporter.avatar si présent -->
                                                                <img src="/assets/compiled/jpg/5.jpg" alt="avatar">
                                                            </div>
                                                            <p class="font-bold ms-3 mb-0"><%= inc.Reporter ? inc.Reporter.name : "Anonyme" %></p>
                                                        </div>
                                                    </td>
                                                    <td class="col-auto">
                                                        <p class="mb-0">
                                                            <strong><%= inc.title %></strong>
                                                            <% if (inc.Chantier && inc.Chantier.name) { %>
                                                                — <em><%= inc.Chantier.name %></em>
                                                            <% } %>
                                                        </p>
                                                        <small class="text-muted"><%= new Date(inc.date).toLocaleString('fr-FR') %></small>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="2">Aucun incident récent.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonne de droite : profil + messages + visitors -->
        <div class="col-12 col-lg-3">
            <div class="card">
                <div class="card-body py-4 px-4">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-xl">
                            <img src="./assets/compiled/jpg/1.jpg" alt="Face 1">
                        </div>
                        <div class="ms-3 name">
                            <!-- si tu as req.user, remplacer par req.user.name côté controller -->
                            <h5 class="font-bold"><%= (user && user.name) ? user.name : "Utilisateur" %></h5>
                            <h6 class="text-muted mb-0">@<%= (user && user.email) ? user.email.split("@")[0] : "user" %></h6>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notifications récentes (affichées comme messages) -->
            <div class="card">
                <div class="card-header">
                    <h4>Messages récents</h4>
                </div>
                <div class="card-content pb-4">

    <% if (lastNotifications && lastNotifications.length) { %>

        <% lastNotifications.forEach(n => { %>
            <div class="recent-message d-flex px-4 py-3 notification-item 
                <%= n.isRead ? 'read' : 'unread' %>">

                <div class="avatar avatar-lg">
                    <img src="/assets/compiled/jpg/4.jpg" alt="notif">
                </div>

                <div class="name ms-4">
                    <h5 class="mb-1">

                        <%= n.title %>

                        <% if (!n.isRead) { %>
                            <i class="iconly-boldNotification bell-shake"></i>
                        <% } %>

                    </h5>

                    <h6 class="text-muted mb-0">
                        <% if (n.Sender) { %>
                            <%= n.Sender.name %>
                        <% } else { %>
                            Système
                        <% } %>
                    </h6>

                </div>

            </div>
        <% }) %>

    <% } else { %>

        <div class="px-4 py-3 text-muted">Aucune notification récente.</div>

    <% } %>

    
    <a href="/notifications/mine">

    <div class="px-4">
        <button class='btn btn-block btn-xl btn-outline-primary font-bold mt-3'>
            voir les notifications
        </button>

        </a>
    </div>
</div>

