<%- include("../partials/sidebar") %>
</div></div>

<div id="main">
  <%- include("../partials/header") %>

  <div class="page-heading">
    <div class="page-title">
      <div class="row">

        <!-- Titre -->
        <div class="col-12 col-md-6 order-md-1 order-last">
          <h3><%= assignment ? "Modifier une affectation" : "Ajouter une affectation" %></h3>
          <p class="text-subtitle text-muted">
            Gestion des affectations des utilisateurs aux chantiers.
          </p>

        <% if (errors && errors.length > 0) { %>
          <div class="alert alert-danger mt-2">
            <ul>
              <% errors.forEach(e => { %>
                  <li><%= e.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        </div>

        <!-- Breadcrumb -->
        <div class="col-12 col-md-6 order-md-2 order-first">
          <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/assignments/list">Affectations</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                <%= assignment ? "Modifier" : "Ajouter" %>
              </li>
            </ol>
          </nav>
        </div>

      </div>
    </div>
  </div>

  <!-- FORMULAIRE -->
  <section id="multiple-column-form">
    <div class="row match-height">
      <div class="col-12">

        <div class="card">
          <div class="card-header">
            <h4 class="card-title">
              <%= assignment ? "Modifier l’affectation" : "Créer une nouvelle affectation" %>
            </h4>
          </div>

          <div class="card-content">
            <div class="card-body">

              <form class="form"
                action="<%= assignment ? '/assignments/update/' + assignment.id : '/assignments/create' %>"
                method="POST">

                <div class="row">

                  <!-- Utilisateur -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Utilisateur</label>

                      <select name="userId" class="form-select" required>
                        <option value="">-- Sélectionner --</option>

                        <% users.forEach(u => { %>
                          <option value="<%= u.id %>"
                            <%= assignment && assignment.userId === u.id ? "selected" : "" %>
                            <%= old && old.userId == u.id ? "selected" : "" %>>
                            <%= u.name %> -- <%= u.email %>
                          </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>

                  <!-- Chantier -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Chantier</label>

                      <select name="chantierId" class="form-select" required>
                        <option value="">-- Sélectionner --</option>

                        <% chantiers.forEach(c => { %>
                          <option value="<%= c.id %>"
                            <%= assignment && assignment.chantierId === c.id ? "selected" : "" %>
                            <%= old && old.chantierId == c.id ? "selected" : "" %>>
                            <%= c.name %>
                          </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>

                  <!-- Rôle -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Rôle</label>

                      <select name="roleId" class="form-select" required>
                        <option value="">-- Sélectionner --</option>

                        <% roles.forEach(r => { %>
                          <option value="<%= r.id %>"
                            <%= assignment && assignment.roleId === r.id ? "selected" : "" %>
                            <%= old && old.roleId == r.id ? "selected" : "" %>>
                            <%= r.name %>
                          </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>

                  <!-- Date d'affectation -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Date d’affectation</label>

                      <input
                        type="date"
                        name="assignedAt"
                        class="form-control"
                        value="<%= assignment
                          ? assignment.assignedAt.toISOString().split('T')[0]
                          : (old ? old.assignedAt : new Date().toISOString().split('T')[0]) %>"
                        required
                      >
                    </div>
                  </div>

                  <!-- Statut actif -->
                  <div class="col-md-6 col-12">
                    <div class="form-group">
                      <label class="form-label">Actif</label>

                      <div class="form-check form-switch">
                      <!-- input caché pour envoyer 0 si NON coché -->
                      <input type="hidden" name="isActive" value="0"> 
                      <input class="form-check-input"
                            type="checkbox"
                            name="isActive"
                            value="1"
                            <%= (assignment && assignment.isActive) ? "checked" : "" %>
                            <%= (old && old.isActive) ? "checked" : "" %>
>

>

                        <label class="form-check-label">Affectation active</label>
                      </div>
                    </div>
                  </div>

                </div>

                <!-- Buttons -->
                <div class="row mt-4">
                  <div class="col-12 d-flex justify-content-end">

                    <button type="submit" class="btn btn-primary me-1 mb-1">
                      Enregistrer
                    </button>

                    <a href="/assignments/list-assignment" class="btn btn-light-secondary me-1 mb-1">
                      Annuler
                    </a>

                  </div>
                </div>

              </form>

            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <%- include("../partials/footer") %>
</div>
</div>

<script src="../../assets/static/js/components/dark.js"></script>
<script src="../../assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="../../assets/compiled/js/app.js"></script>

<script src="../../assets/extensions/jquery/jquery.min.js"></script>
<script src="../../assets/extensions/parsleyjs/parsley.min.js"></script>
<script src="../../assets/static/js/pages/parsley.js"></script>

</body>
</html>
