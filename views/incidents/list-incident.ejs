<div id="main">
<%- include("../partials/header") %>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Tous les incidents</h3>
                <p class="text-subtitle text-muted">Liste de tous les incidents enregistrés dans le système</p>
            </div>

            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Incidents</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">

                <h5 class="card-title">Gestion des incidents</h5>

                <a href="/incidents/create_form" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> Ajouter un incident
                </a>

            </div>

            <div class="card-body">

                <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
                <% } %>

                <% if (success) { %>
                <div class="alert alert-success"><%= success %></div>
                <% } %>

                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Chantier</th>
                            <th>Gravité</th>
                            <th>Statut</th>
                            <th>Date</th>
                            <th>Rapporté par</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% incidents.forEach(incident => { %>
                        <tr>
                            <td><%= incident.title %></td>
                            <td><%= incident.Chantier ? incident.Chantier.name : 'N/A' %></td>
                            <td>
                                <% if (incident.severity === 'mineur') { %>
                                    <span class="badge bg-success">Mineur</span>
                                <% } else if (incident.severity === 'modéré') { %>
                                    <span class="badge bg-warning">Modéré</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Critique</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (incident.status === 'ouvert') { %>
                                    <span class="badge bg-primary">Ouvert</span>
                                <% } else if (incident.status === 'en_cours') { %>
                                    <span class="badge bg-info">En cours</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">Résolu</span>
                                <% } %>
                            </td>
                            <td><%= new Date(incident.date).toLocaleDateString("fr-CA") %></td>
                            <td><%= incident.Reporter ? incident.Reporter.name : 'N/A' %></td>
                            <td>
                                <a href="/incidents/details/<%= incident.id %>" class="btn btn-info">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="/incidents/edit/<%= incident.id %>" class="btn btn-primary">
                                    <i class="bi bi-pen-fill"></i>
                                </a>
                                <a href="/incidents/delete/<%= incident.id %>" class="btn btn-danger btn-delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>

                </table>

            </div>
        </div>
    </section>
</div>

<%- include("../partials/footer") %>

</div>
</div>

<script src="../../assets/static/js/components/dark.js"></script>
<script src="../../assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="../../assets/compiled/js/app.js"></script>

<script src="../../assets/extensions/simple-datatables/umd/simple-datatables.js"></script>
<script src="../../assets/static/js/pages/simple-datatables.js"></script>

<script>
document.addEventListener("click", function (e) {
    if (e.target.closest(".btn-delete")) {
        if (!confirm("Voulez-vous vraiment supprimer cet incident ?")) {
            e.preventDefault();
        }
    }
});
</script>

</body>
</html>