<%- include("../partials/sidebar") %>
</div></div>

<div id="main">
  <%- include("../partials/header") %>

  <div class="page-heading">
    <div class="page-title">
      <div class="row">

        <div class="col-12 col-md-6 order-md-1 order-last">
          <h3><%= chantier ? "Modifier un chantier" : "Ajouter un chantier" %></h3>
          <p class="text-subtitle text-muted">
            Gestion des chantiers dans le système.
          </p>

        <% if (errors && errors.length > 0) { %>
          <div class="alert alert-danger mt-2">
            <ul>
              <% errors.forEach(e => { %>
                  <li><%= e.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        </div>

        <div class="col-12 col-md-6 order-md-2 order-first">
          <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                <%= chantier ? "Modifier chantier" : "Ajout chantier" %>
              </li>
            </ol>
          </nav>
        </div>

      </div>
    </div>
  </div>

  <section id="multiple-column-form">
    <div class="row match-height">
      <div class="col-12">

        <div class="card">
          <div class="card-header">
            <h4 class="card-title">
              <%= chantier ? "Modifier le chantier" : "Créer un chantier" %>
            </h4>
          </div>

          <div class="card-content">
            <div class="card-body">

              <form class="form"
                    action="<%= chantier ? '/chantiers/update/' + chantier.id : '/chantiers/create' %>"
                    method="POST">

                <div class="row">

                  <!-- Nom du chantier -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="name" class="form-label">Nom du chantier</label>
                      <input type="text" id="name" name="name" class="form-control"
                             value="<%= (chantier ? chantier.name : (old ? old.name : '')) %>" required>
                    </div>
                  </div>

                  <!-- Localisation -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="location" class="form-label">Localisation</label>
                      <input type="text" id="location" name="location" class="form-control"
                             value="<%= (chantier ? chantier.location : (old ? old.location : '')) %>" required>
                    </div>
                  </div>

                  <!-- Description -->
                  <div class="col-md-12 col-12">
                    <div class="form-group">
                      <label for="description" class="form-label">Description</label>
                      <textarea id="description" name="description" rows="3" class="form-control"><%= chantier ? chantier.description : (old ? old.description : '') %></textarea>
                    </div>
                  </div>

                  <!-- Date de début -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="startDate" class="form-label">Date de début</label>
                      <input type="date" id="startDate" name="startDate" class="form-control"
                             value="<%= chantier ? chantier.startDate.toISOString().split('T')[0] : (old ? old.startDate : '') %>"
                             required>
                    </div>
                  </div>

                  <!-- Date de fin -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="endDate" class="form-label">Date de fin</label>
                      <input type="date" id="endDate" name="endDate" class="form-control"
                             value="<%= chantier ? chantier.endDate.toISOString().split('T')[0] : (old ? old.endDate : '') %>"
                             required>
                    </div>
                  </div>

                  <!-- Statut -->
                <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Statut</label>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" value="en_cours"
                              <%= chantier && chantier.status === 'en_cours' ? "checked" : "" %>>
                        <label class="form-check-label">En cours</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" value="termine"
                              <%= chantier && chantier.status === 'termine' ? "checked" : "" %>>
                        <label class="form-check-label">Terminé</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" value="en_pause"
                              <%= chantier && chantier.status === 'en_pause' ? "checked" : "" %>>
                        <label class="form-check-label">En pause</label>
                      </div>

                    </div>
                  </div>








                </div>

                <div class="row mt-4">
                  <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-1 mb-1">
                      Enregistrer
                    </button>

                    <a href="/chantiers/list-chantier" class="btn btn-light-secondary me-1 mb-1">
                      Annuler
                    </a>
                  </div>
                </div>

              </form>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <%- include("../partials/footer") %>
</div>
</div>

<script src="../../assets/static/js/components/dark.js"></script>
<script src="../../assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="../../assets/compiled/js/app.js"></script>

<script src="../../assets/extensions/jquery/jquery.min.js"></script>
<script src="../../assets/extensions/parsleyjs/parsley.min.js"></script>
<script src="../../assets/static/js/pages/parsley.js"></script>

</body>
</html>
