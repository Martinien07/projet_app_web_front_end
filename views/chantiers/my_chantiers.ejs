<div id="main">
<%- include("../partials/header") %>

<div class="page-heading">
    <div class="page-title">
        <div class="row">

            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Mes Chantiers</h3>
                <p class="text-subtitle text-muted">
                    Chantiers sur lesquels vous êtes affecté.
                </p>
            </div>

            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Mes Chantiers</li>
                    </ol>
                </nav>
            </div>

        </div>
    </div>
</div>

<section class="section">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title">Liste des chantiers assignés</h5>
        </div>

        <div class="card-body">

            <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
            <% } %>

            <table class="table table-striped" id="table1">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Lieu</th>
                        <th>Description</th>
                        <th>Date début</th>
                        <th>Date fin</th>
                        <th>Status</th>
                        <th>Rôle</th>
                    </tr>
                </thead>

                <tbody>
                    <% assignments.forEach(item => { %>
                    <tr>
                        <td><%= item.Chantier.name %></td>
                        <td><%= item.Chantier.location %></td>
                        <td><%= item.Chantier.description %></td>

                        <td><%= new Date(item.Chantier.startDate).toLocaleDateString("fr-CA") %></td>
                        <td><%= new Date(item.Chantier.endDate).toLocaleDateString("fr-CA") %></td>

                        <td>
                            <% if (item.Chantier.status === 'en_cours') { %>
                                <span class="badge bg-success">En cours</span>
                            <% } else if (item.Chantier.status === 'en_pause') { %>
                                <span class="badge bg-danger">En arrêt</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Terminé</span>
                            <% } %>
                        </td>

                        <td>
                            <span class="badge bg-primary"><%= item.Role.name %></span>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>

            </table>

        </div>
    </div>
</section>

<%- include("../partials/footer") %>

</div>
</div>

