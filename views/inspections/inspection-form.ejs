<div id="main">
  <%- include("../partials/header") %>

  <div class="page-heading">
    <div class="page-title">
      <div class="row">

        <div class="col-12 col-md-6 order-md-1 order-last">
          <h3><%= inspection ? "Modifier une inspection" : "Ajouter une inspection" %></h3>
          <p class="text-subtitle text-muted">
            Gestion des inspections dans le système.
          </p>

        <% if (errors && errors.length > 0) { %>
          <div class="alert alert-danger mt-2">
            <ul>
              <% errors.forEach(e => { %>
                  <li><%= e.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        </div>

        <div class="col-12 col-md-6 order-md-2 order-first">
          <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                <%= inspection ? "Modifier inspection" : "Ajout inspection" %>
              </li>
            </ol>
          </nav>
        </div>

      </div>
    </div>
  </div>

  <section id="multiple-column-form">
    <div class="row match-height">
      <div class="col-12">

        <div class="card">
          <div class="card-header">
            <h4 class="card-title">
              <%= inspection ? "Modifier l'inspection" : "Créer une inspection" %>
            </h4>
          </div>

          <div class="card-content">
            <div class="card-body">

              <form class="form"
                    action="<%= inspection ? '/inspections/update/' + inspection.id : '/inspections/create' %>"
                    method="POST">

                <div class="row">

                  <!-- Chantier -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="chantierId" class="form-label">Chantier</label>
                      <select id="chantierId" name="chantierId" class="form-control" required>
                        <option value="">Sélectionnez un chantier</option>
                        <% chantiers.forEach(chantier => { %>
                          <option value="<%= chantier.id %>" <%= (inspection && inspection.chantierId === chantier.id) ? 'selected' : '' %>>
                            <%= chantier.name %> - <%= chantier.location %>
                          </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>

                  <!-- Inspecteur -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="inspectorId" class="form-label">Inspecteur</label>
                      <select id="inspectorId" name="inspectorId" class="form-control" required>
                        <option value="">Sélectionnez un inspecteur</option>
                        <% users.forEach(user => { %>
                          <option value="<%= user.id %>" <%= (inspection && inspection.inspectorId === user.id) ? 'selected' : '' %>>
                            <%= user.name %> (<%= user.email %>)
                          </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>

                  <!-- Date -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="date" class="form-label">Date</label>
                      <input type="date" id="date" name="date" class="form-control"
                             value="<%= inspection ? (typeof inspection.date === 'string' ? inspection.date.split('T')[0] : inspection.date.toISOString().split('T')[0]) : (old ? old.date : '') %>"
                             required>
                    </div>
                  </div>

                  <!-- Statut -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Statut</label>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" value="en_attente" id="status_attente"
                              <%= (inspection && inspection.status === 'en_attente') || !inspection ? "checked" : "" %>>
                        <label class="form-check-label" for="status_attente">En attente</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" value="conforme" id="status_conforme"
                              <%= inspection && inspection.status === 'conforme' ? "checked" : "" %>>
                        <label class="form-check-label" for="status_conforme">Conforme</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" value="non_conforme" id="status_non"
                              <%= inspection && inspection.status === 'non_conforme' ? "checked" : "" %>>
                        <label class="form-check-label" for="status_non">Non conforme</label>
                      </div>

                    </div>
                  </div>

                  <!-- Observations -->
                  <div class="col-md-12 col-12">
                    <div class="form-group">
                      <label for="observation" class="form-label">Observations</label>
                      <textarea id="observation" name="observation" rows="3" class="form-control"><%= inspection ? inspection.observation : (old ? old.observation : '') %></textarea>
                    </div>
                  </div>

                  <!-- Recommandations -->
                  <div class="col-md-12 col-12">
                    <div class="form-group">
                      <label for="recommendations" class="form-label">Recommandations</label>
                      <textarea id="recommendations" name="recommendations" rows="3" class="form-control"><%= inspection ? inspection.recommendations : (old ? old.recommendations : '') %></textarea>
                    </div>
                  </div>

                </div>

                <div class="row mt-4">
                  <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-1 mb-1">
                      Enregistrer
                    </button>

                    <a href="/inspections/list" class="btn btn-light-secondary me-1 mb-1">
                      Annuler
                    </a>
                  </div>
                </div>

              </form>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <%- include("../partials/footer") %>
</div>
</div>

<script src="../../assets/static/js/components/dark.js"></script>
<script src="../../assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="../../assets/compiled/js/app.js"></script>

<script src="../../assets/extensions/jquery/jquery.min.js"></script>
<script src="../../assets/extensions/parsleyjs/parsley.min.js"></script>
<script src="../../assets/static/js/pages/parsley.js"></script>

</body>
</html>
