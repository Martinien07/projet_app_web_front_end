<div id="main">
<%- include("../partials/header") %>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Toutes les inspections</h3>
                <p class="text-subtitle text-muted">Suivi des inspections de chantier</p>
            </div>

            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Inspections</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section class="section">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title">Gestion des inspections</h5>
                <a href="/inspections/create_form" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> Nouvelle inspection
                </a>
            </div>

            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>

                <% if (success) { %>
                    <div class="alert alert-success"><%= success %></div>
                <% } %>

                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Chantier</th>
                            <th>Inspecteur</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% inspections.forEach(i => { %>
                        <tr>
                            <td><%= new Date(i.date).toLocaleDateString("fr-CA") %></td>
                            <td><%= i.Chantier ? i.Chantier.name : 'N/A' %></td>
                            <td><%= i.Inspector ? i.Inspector.name : 'N/A' %></td>
                            <td>
                                <% if (i.status === 'conforme') { %>
                                    <span class="badge bg-success">Conforme</span>
                                <% } else if (i.status === 'non_conforme') { %>
                                    <span class="badge bg-danger">Non conforme</span>
                                <% } else { %>
                                    <span class="badge bg-warning">En attente</span>
                                <% } %>
                            </td>
                            <!-- BOUTON D'ACTION -->
                            <td>
                                <a href="/inspections/details/<%= i.id %>" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a href="/inspections/edit/<%= i.id %>" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pen-fill"></i>
                                </a>
                                <a href="/inspections/delete/<%= i.id %>" class="btn btn-danger btn-sm btn-delete">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<%- include("../partials/footer") %>

</div>
</div>

<script src="../../assets/static/js/components/dark.js"></script>
<script src="../../assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="../../assets/compiled/js/app.js"></script>

<script src="../../assets/extensions/simple-datatables/umd/simple-datatables.js"></script>
<script src="../../assets/static/js/pages/simple-datatables.js"></script>

<script>
document.addEventListener("click", function (e) {
    if (e.target.closest(".btn-delete")) {
        if (!confirm("Voulez-vous vraiment supprimer cette inspection ?")) {
            e.preventDefault();
        }
    }
});
</script>