<div id="main">
  <%- include("../partials/header") %>

  <div class="page-heading">
    <div class="page-title">
      <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
          <h3><%= notification ? "Modifier une notification" : "Créer une notification" %></h3>
          <p class="text-subtitle text-muted">
            Gestion des notifications du système.
          </p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
          <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                <%= notification ? "Modifier notification" : "Créer notification" %>
              </li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <section id="multiple-column-form">
    <div class="row match-height">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">
              <%= notification ? "Modifier la notification" : "Nouvelle notification" %>
            </h4>
          </div>

          <div class="card-content">
            <div class="card-body">

              <form class="form" 
                action="<%= notification ? '/notifications/update/' + notification.id : '/notifications/create' %>" 
                method="POST">

                <div class="row">

                  <!-- Titre -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Titre</label>
                      <input
                        type="text"
                        class="form-control"
                        name="title"
                        value="<%= notification ? notification.title : '' %>"
                        required
                      />
                    </div>
                  </div>

                  <!-- Scope -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Étendue (Scope)</label>
                      <select class="form-control" name="scope" required>
                        <option value="user" <%= notification && notification.scope === "user" ? "selected" : "" %>>Utilisateur</option>
                        <option value="chantier" <%= notification && notification.scope === "chantier" ? "selected" : "" %>>Chantier</option>
                        <option value="list" <%= notification && notification.scope === "list" ? "selected" : "" %>>Liste</option>
                        <option value="global" <%= notification && notification.scope === "global" ? "selected" : "" %>>Global</option>
                      </select>
                    </div>
                  </div>

                  <!-- Niveau -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Niveau</label>
                      <select class="form-control" name="level" required>
                        <option value="all" <%= notification && notification.level === "all" ? "selected" : "" %>>All</option>
                        <option value="private" <%= notification && notification.level === "private" ? "selected" : "" %>>Private</option>
                        <option value="hprivate" <%= notification && notification.level === "hprivate" ? "selected" : "" %>>HPrivate</option>
                      </select>
                    </div>
                  </div>

                  <!-- Cible -->
                  <div class="col-md-6 col-12">
                    <div class="form-group">
                      <label class="form-label">Cible (optionnel)</label>
                      <input
                        type="text"
                        class="form-control"
                        name="target"
                        value="<%= notification ? notification.target : '' %>"
                      />
                    </div>
                  </div>

                  <!-- Message -->
                  <div class="col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Message</label>
                      <textarea
                        class="form-control"
                        name="message"
                        rows="4"
                        required
                      ><%= notification ? notification.message : '' %></textarea>
                    </div>
                  </div>

                </div>

                <div class="row mt-4">
                  <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-1 mb-1">
                      Enregistrer
                    </button>

                    <a href="/notifications" class="btn btn-light-secondary me-1 mb-1">
                      Annuler
                    </a>
                  </div>
                </div>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include("../partials/footer") %>
</div>

<script src="../../assets/static/js/components/dark.js"></script>
<script src="../../assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="../../assets/compiled/js/app.js"></script>

<script src="../../assets/extensions/jquery/jquery.min.js"></script>
<script src="../../assets/extensions/parsleyjs/parsley.min.js"></script>
<script src="../../assets/static/js/pages/parsley.js"></script>

</body>
</html>
