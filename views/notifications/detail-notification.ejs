<div id="main">
<%- include("../partials/header") %>

<div class="page-heading">
    <div class="page-title">
        <div class="row">

            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Détail de la notification</h3>
                <p class="text-subtitle text-muted">
                    Informations complètes concernant cette notification.
                </p>
            </div>

            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/notifications/chantiers">Notifications Chantiers</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Détails</li>
                    </ol>
                </nav>
            </div>

        </div>
    </div>
</div>

<section class="section">
    <div class="card">

        <div class="card-header">
            <h5 class="card-title"><%= notification.title %></h5>
        </div>

        <div class="card-body">

            <div class="mb-3">
                <strong>Message : </strong>
                <p><%= notification.message %></p>
            </div>

            <div class="mb-3">
                <strong>Chantier concerné : </strong>
                <span class="badge bg-primary"><%= chantierName || "Inconnu" %></span>
            </div>

            <div class="mb-3">
                <strong>Niveau : </strong>
                <span class="badge bg-info"><%= notification.level %></span>
            </div>

            <div class="mb-3">
                <strong>Date de création : </strong>
                <%= new Date(notification.createdAt).toLocaleString("fr-CA") %>
            </div>

            <div class="mb-3">
                <strong>Statut de lecture : </strong>
                <% if (recipient && recipient.isRead) { %>
                    <span class="badge bg-success">Déjà lu</span>
                    <br>
                    <small>Lu le : <%= new Date(recipient.readAt).toLocaleString("fr-CA") %></small>
                <% } else { %>
                    <span class="badge bg-warning">Non lu</span>
                <% } %>
            </div>

            <div class="mt-4">
                <% if (!recipient || !recipient.isRead) { %>
                <a href="/notifications/read/<%= notification.id %>" class="btn btn-success">Marquer comme lu</a>
                <% } %>

                  <% if (user && user.access === 1) { %>
                <a href="/notifications/delete/<%= notification.id %>" class="btn btn-danger"
                   onclick="return confirm('Voulez-vous vraiment supprimer cette notification ?')">
                   Supprimer
                </a>

                 <% } %>

                <a href="/notifications/mine/" class="btn btn-secondary">Retour</a>
            </div>

        </div>
    </div>
</section>

<%- include("../partials/footer") %>
</div>
</div>

<script src="/assets/static/js/components/dark.js"></script>
<script src="/assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
