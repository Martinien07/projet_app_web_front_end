<%- include("../partials/sidebar") %>
</div></div>

<div id="main">
  <%- include("../partials/header") %>

  <div class="page-heading">
    <div class="page-title">
      <div class="row">

        <div class="col-12 col-md-6 order-md-1 order-last">
          <h3><%= notification ? "Modifier une notification" : "Créer une notification" %></h3>
          <p class="text-subtitle text-muted">
            Gestion des notifications dans le système.
          </p>

        <% if (errors && errors.length > 0) { %>
          <div class="alert alert-danger mt-2">
            <ul>
              <% errors.forEach(e => { %>
                  <li><%= e.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        </div>

        <div class="col-12 col-md-6 order-md-2 order-first">
          <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                <%= notification ? "Modifier notification" : "Nouvelle notification" %>
              </li>
            </ol>
          </nav>
        </div>

      </div>
    </div>
  </div>

  <section id="multiple-column-form">
    <div class="row match-height">
      <div class="col-12">

        <div class="card">
          <div class="card-header">
            <h4 class="card-title">
              <%= notification ? "Modifier la notification" : "Créer la notification" %>
            </h4>
          </div>

          <div class="card-content">
            <div class="card-body">

              <form class="form"
                    action="<%= notification ? '/notifications/update/' + notification.id : '/notifications/create' %>"
                    method="POST">

                <div class="row">

                  <!-- Titre -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="title" class="form-label">Titre</label>
                      <input type="text" id="title" name="title" class="form-control"
                             value="<%= notification ? notification.title : (old ? old.title : '') %>" required>
                    </div>
                  </div>

                  <!-- Message -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label for="message" class="form-label">Message</label>
                      <textarea id="message" name="message" rows="3" class="form-control" required><%= notification ? notification.message : (old ? old.message : '') %></textarea>
                    </div>
                  </div>

                  <!-- Scope -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Portée (Scope)</label>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="scope" value="user"
                          <%= notification && notification.scope === 'user' ? "checked" : "" %>>
                        <label class="form-check-label">Utilisateur spécifique</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="scope" value="chantier"
                          <%= notification && notification.scope === 'chantier' ? "checked" : "" %>>
                        <label class="form-check-label">Chantier</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="scope" value="list"
                          <%= notification && notification.scope === 'list' ? "checked" : "" %>>
                        <label class="form-check-label">Liste d'utilisateurs</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="scope" value="global"
                          <%= notification && notification.scope === 'global' ? "checked" : "" %>>
                        <label class="form-check-label">Global</label>
                      </div>

                    </div>
                  </div>

                  <!-- Level -->
                  <div class="col-md-6 col-12">
                    <div class="form-group mandatory">
                      <label class="form-label">Niveau (Level)</label>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="level" value="all"
                          <%= notification && notification.level === 'all' ? "checked" : "" %>>
                        <label class="form-check-label">All</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="level" value="private"
                          <%= notification && notification.level === 'private' ? "checked" : "" %>>
                        <label class="form-check-label">Private</label>
                      </div>

                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="level" value="hprivate"
                          <%= notification && notification.level === 'hprivate' ? "checked" : "" %>>
                        <label class="form-check-label">Highly Private</label>
                      </div>

                    </div>
                  </div>

                  <!-- Target -->
                  <div class="col-md-12 col-12">
                    <div class="form-group">
                      <label for="target" class="form-label">Target (ID utilisateur, chantier ou liste)</label>
                      <input type="text" id="target" name="target" class="form-control"
                             value="<%= notification ? notification.target : (old ? old.target : '') %>">
                      <small class="text-muted">Laissez vide pour 'global'. Pour liste multiple, séparez par des virgules.</small>
                    </div>
                  </div>

                </div>

                <div class="row mt-4">
                  <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-1 mb-1">
                      Enregistrer
                    </button>

                    <a href="/notifications/list-notifications" class="btn btn-light-secondary me-1 mb-1">
                      Annuler
                    </a>
                  </div>
                </div>

              </form>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <%- include("../partials/footer") %>
</div>
</div>

<script src="../../assets/static/js/components/dark.js"></script>
<script src="../../assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script src="../../assets/compiled/js/app.js"></script>

<script src="../../assets/extensions/jquery/jquery.min.js"></script>
<script src="../../assets/extensions/parsleyjs/parsley.min.js"></script>
<script src="../../assets/static/js/pages/parsley.js"></script>

</body>
</html>
